<h1>S'inscrire</h1>
<form class="mx-5" id="register" method="POST" action="./api/users">

  <div class="form-group">
    <label for="email">Email</label>
    <input type="email" class="form-control" id="email" name="email" required>
  </div>

  <div class="form-group">
    <label for="pseudo">Pseudo</label>
    <input type="text" class="form-control" id="pseudo" name="pseudo" required>
  </div>

  <div class="form-group">
    <label for="password1">Mot de passe</label>
    <input type="password" class="form-control" id="password1" name="password1" pattern=".*[0-9]+.*"
      title="Le mot de passe doit contenir minimum 8 charactères alphanumériques" minlength="8" required>
  </div>

  <div class="form-group ">
    <label for="password2">Mot de passe</label>
    <input type="password" class="form-control" id="password2" name="password2" required>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>

<script src="/js/formValidation.js"></script>

<%- include('layouts/footer'); -%>